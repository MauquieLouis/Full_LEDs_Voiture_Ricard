<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExteriorActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="403dp"
        android:layout_height="466dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText,MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:text="Extérieur voiture"
            android:textAlignment="center"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="203dp"
                android:layout_height="39dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch1E"
                    android:layout_width="179dp"
                    android:layout_height="match_parent"
                    android:text="Couleur 1"
                    android:textSize="16sp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="39dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch2E"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:text="Couleur 2"
                    android:textSize="16sp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

        </LinearLayout>


        <RadioGroup
            android:id="@+id/radioGroupE"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:orientation="vertical"
            android:showDividers="middle">


            <RadioButton
                android:id="@+id/radioButton1E"
                android:layout_width="216dp"
                android:layout_height="36dp"
                android:text="Couleur Simple" />

            <RadioButton
                android:id="@+id/radioButton2E"
                android:layout_width="216dp"
                android:layout_height="34dp"
                android:text="Slide 1 couleur" />

            <RadioButton
                android:id="@+id/radioButton3E"
                android:layout_width="215dp"
                android:layout_height="36dp"
                android:text="Slide 2 couleurs" />

            <RadioButton
                android:id="@+id/radioButton4E"
                android:layout_width="218dp"
                android:layout_height="29dp"
                android:text="Snake 2 couleurs" />

            <RadioButton
                android:id="@+id/radioButton5E"
                android:layout_width="218dp"
                android:layout_height="29dp"
                android:text="Rainbow Slide" />

            <RadioButton
                android:id="@+id/radioButton6E"
                android:layout_width="218dp"
                android:layout_height="26dp"
                android:text="Degrade?" />

            <RadioButton
                android:id="@+id/radioButton7E"
                android:layout_width="216dp"
                android:layout_height="31dp"
                android:text="Stars" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effet sélectionné : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taille Slide"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBarSlide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delai Slide"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBarTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="26" />

        <Button
            android:id="@+id/buttonOffE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ETEINDRE LES LEDS !"
            android:onClick="turnOffLedE"/>

    </LinearLayout>

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="241dp"
        android:layout_height="212dp"
        app:actionMode="always"
        app:alpha_flag="0.8"
        app:alpha_selector="0.8"
        app:debounceDuration="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974"
        app:palette="@drawable/palette"
        app:preferenceName="MyColorPicker"
        app:selector="@drawable/wheel"
        app:selector_size="6dp" />
</androidx.constraintlayout.widget.ConstraintLayout>