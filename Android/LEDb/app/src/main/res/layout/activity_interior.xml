<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InteriorActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="570dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText,MissingConstraints"
        tools:layout_editor_absoluteX="-2dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:text="Intérieur voiture"
            android:textAlignment="center"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch1I"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:text="Couleur 1"
                    android:textSize="16sp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="39dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch2I"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="Couleur 2"
                    android:textSize="16sp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="201dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroupI"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:showDividers="middle">


                <RadioButton
                    android:id="@+id/radioButton1I"
                    android:layout_width="161dp"
                    android:layout_height="34dp"
                    android:text="Couleur Simple" />

                <RadioButton
                    android:id="@+id/radioButton2I"
                    android:layout_width="163dp"
                    android:layout_height="28dp"
                    android:text="Slide 1 couleur" />

                <RadioButton
                    android:id="@+id/radioButton3I"
                    android:layout_width="162dp"
                    android:layout_height="28dp"
                    android:text="Slide 2 couleurs" />

                <RadioButton
                    android:id="@+id/radioButton4I"
                    android:layout_width="159dp"
                    android:layout_height="30dp"
                    android:text="Snake 2 couleurs" />

                <RadioButton
                    android:id="@+id/radioButton5I"
                    android:layout_width="162dp"
                    android:layout_height="24dp"
                    android:text="Rainbow Slide" />

                <RadioButton
                    android:id="@+id/radioButton6I"
                    android:layout_width="163dp"
                    android:layout_height="20dp"
                    android:text="Degrade?" />

                <RadioButton
                    android:id="@+id/radioButton7I"
                    android:layout_width="162dp"
                    android:layout_height="26dp"
                    android:text="Stars" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switchCalandre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calandre" />

                <RadioGroup
                    android:id="@+id/radioGroupCalandre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/radioButton1Calandre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Police" />

                    <RadioButton
                        android:id="@+id/radioButton2Calandre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Synchro" />
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effet sélectionné : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taille Slide"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBarSlideI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15"
            android:paddingLeft="50dp"
            android:paddingRight="50dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delai Slide"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBarTimeI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="26" />

        <Button
            android:id="@+id/button6"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:onClick="turnOffLedI"
            android:text="ETEINDRE LES LEDS !" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="241dp"
        android:layout_height="212dp"
        app:actionMode="always"
        app:alpha_flag="0.8"
        app:alpha_selector="0.8"
        app:debounceDuration="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974"
        app:palette="@drawable/palette"
        app:preferenceName="MyColorPicker"
        app:selector="@drawable/wheel"
        app:selector_size="6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>